@model VaccineWebApp.Models.Booking

@{
    ViewData["Title"] = "VaccineBooking";
}

<h1 class="text-center heading">Register Your Vaccine Booking</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="VaccineBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HospitalID" class="control-label"></label>
                <select asp-for="HospitalID" class="form-control" asp-items="ViewBag.HospitalID"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm Your Booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
