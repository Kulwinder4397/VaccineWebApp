@model IEnumerable<VaccineWebApp.Models.Booking>

@{
    ViewData["Title"] = "MyBookings";
}

<h1 class="text-center heading">My Vaccine Bookings</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital.ContactNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.BookingDate.ToString("dddd, dd MMMM yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital.ContactNo)
            </td>
            <td>
                <a asp-action="CancelBooking" class="btn btn-danger" onclick="return confirm('Are You Sure to Remove This Vaccine Booking?')" asp-route-id="@item.BookingID">Cancel Booking</a>
            </td>
        </tr>
}
    </tbody>
</table>
