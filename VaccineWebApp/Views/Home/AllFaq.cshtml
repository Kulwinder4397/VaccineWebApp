@model IEnumerable<VaccineWebApp.Models.Faq>

@{
    ViewData["Title"] = "AllFaq";
}

<h1 class="heading text-center">Question &amp; Answer</h1>
<div id="accordion">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <a class="card-link" data-toggle="collapse" href="@string.Format("#collapse{0}",item.FaqID)">
                    @item.Question
                </a>
            </div>
            <div id="@string.Format("collapse{0}",item.FaqID)" class="collapse" data-parent="#accordion">
                <div class="card-body">
                    @item.Answer
                </div>
            </div>
        </div>
    }
</div>

