@model IEnumerable<VaccineWebApp.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">All Vaccine Bookings</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BookingDate.ToString("dddd, dd MMMM yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospital.Name)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.Hospital.ContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.UserID">View Person Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
