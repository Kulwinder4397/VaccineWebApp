@model IEnumerable<VaccineWebApp.Models.Hospital>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">All Hospital Details</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Hospital Details</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.HospitalID">Edit</a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.HospitalID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
