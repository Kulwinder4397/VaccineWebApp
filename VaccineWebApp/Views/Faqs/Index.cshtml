@model IEnumerable<VaccineWebApp.Models.Faq>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">View All Question / Answers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Question / Answer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.FaqID">Edit</a> |
                
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.FaqID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
